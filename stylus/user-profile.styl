@import 'variables'

.user-profile
  display flex
  padding 15px
  justify-content flex-start
  border-bottom 1px solid $grey-lightest
  .avatar
    display inline-block
    width 100px
    height 100px
    border-radius $border-radius
  .user-info 
    padding-left 15px
    display flex
    flex-direction column
    justify-content space-between
    .username
      font-size 24px
      font-weight 400
      margin 0
      color #3A3335
    .user-time
      font-size 14px
      color #666
.user-bio
  padding 10px
  font-size 14px
  color #666

/*follow card*/
.site-data
  display flex
  justify-content flex-start
  align-items flex-start
  border-bottom 1px solid $grey-lightest
  &:last-child
    border-bottom none
  .data-count
    display flex
    flex-direction column
    flex-basis 50%
    padding 10px 15px
    border-right 1px solid $grey-lightest
    &:last-child
      border-right none
    .data-title
      font-size12px
      color #999
      margin-bottom 5px
    .data-number
      color #3A3335
      font-size 16px
    .data-unit
      color #555
      font-size 12px
      font-weight normal
      padding-left 5px