@import 'variables'

.block-card
  display block
  margin-bottom 20px
  background #fff
  border-bottom 1px solid $grey-lighter
  border-radius 4px
  box-shadow 4px 2px 2px rgba(0,0,0,.03)
  font-size $font-size-sm
  .card-header
    padding 10px
    border-bottom 1px solid $grey-lighter

  .card-footer
    padding 10px
