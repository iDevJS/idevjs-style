@import 'variables'

.post-item
  align-items flex-start
  .post-data-item
    font-size $font-size-sm
    color $grey-light
    background rgba(0,0,0,.02)
    box-shadow 0 0 2px rgba(0,0,0,.08) inset
    border-radius $border-radius-lg
    height 26px
    line-height 26px
    width 3rem
    text-align center
    &:first-child
      border-bottom: 1px solid rgba(162, 165, 166, 0.18)
      border-bottom-left-radius 0
      border-bottom-right-radius 0
    &:last-child
      border-top-left-radius 0
      border-top-right-radius 0
  .metadata
    color $grey-light
  .fullname
    color $grey-dark
    font-size $font-size-sm
  .node
    font-size $font-size-xs
    color #666
    border-radius 9px
    background #f5f5f5
    border 1px solid #eee
    padding 2px 8px
    vertical-align baseline
  .title
    font-size 1rem
    margin 0 0.625rem 0.625rem 0
    a
      color #6C6024
      transition color .3s ease-in-out
      &:hover
        color $brand-primary
.user-post-item
  align-items center