@import 'variables'

.tab-header 
  ul
    display flex
    align-items center
    flex 1
    justify-content flex-start
    list-style none
    padding 0
    margin 0
    li
      display block
      margin-right 4px
      a
        display flex
        align-items center
        justify-content center
        padding 2px 12px
        cursor pointer
        border-radius $border-radius
        white-space nowrap
        font-size $font-size-sm
        color $link-color
        &:hover
          background rgba(0,0,0,0.05)
        ^[-1].is-active a
          background #3A3335
          color #fff
